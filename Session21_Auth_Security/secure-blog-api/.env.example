# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/secure-blog
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/secure-blog?retryWrites=true&w=majority

# JWT Configuration (Generate secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long_please_change_this
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_at_least_32_characters_long
JWT_REFRESH_EXPIRE=7d

# Cookie Configuration
COOKIE_SECRET=your_secure_cookie_secret_at_least_32_characters_long

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# Logging
LOG_LEVEL=info
