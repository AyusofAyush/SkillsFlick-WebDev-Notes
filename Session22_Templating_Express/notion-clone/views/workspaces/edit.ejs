<%- include('../partials/header') %>

  <div class="form-page">
    <div class="form-container">
      <div class="form-header">
        <h1 class="form-title"><span>âš™ï¸</span> Edit Workspace</h1>
        <p class="form-subtitle">Update workspace settings</p>
      </div>

      <form action="/workspaces/<%= workspace.id %>" method="POST" class="form">
        <div class="form-group">
          <label for="name" class="form-label">
            <span>ğŸ“</span> Workspace Name
          </label>
          <input type="text" id="name" name="name" class="form-input" value="<%= workspace.name %>" required
            autofocus />
        </div>

        <div class="form-group">
          <label for="icon" class="form-label">
            <span>ğŸ¨</span> Icon (Emoji)
          </label>
          <input type="text" id="icon" name="icon" class="form-input" value="<%= workspace.icon %>" maxlength="10" />
        </div>

        <div class="form-group">
          <label class="form-checkbox">
            <input type="checkbox" name="isPublic" value="true" <%=workspace.isPublic ? 'checked' : '' %>>
            <span class="checkbox-label">
              <span>ğŸŒ</span> Make this workspace public
            </span>
          </label>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save Changes</button>
          <a href="/workspaces/<%= workspace.id %>" class="btn btn-secondary">
            Cancel
          </a>
        </div>
      </form>

      <div class="danger-zone">
        <h3 class="danger-zone-title">âš ï¸ Danger Zone</h3>
        <p>Deleting a workspace will permanently remove all pages and content.</p>
        <form action="/workspaces/<%= workspace.id %>/delete" method="POST"
          onsubmit="return confirm('Are you sure you want to delete this workspace? This action cannot be undone.');">
          <button type="submit" class="btn btn-danger">Delete Workspace</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>